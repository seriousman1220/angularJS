<!-- Modal -->
<div class="modal fade " id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3 class="modal-title" style="color: blue;">Thêm thông tin nhân viên</h3>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row" style="margin-top:10px;">
                        <div class="col-md-3 col-xs-3 col-sm-3 col-lg-3">
                            <label for="" class="control-label">Bộ phận</label>
                        </div>
                        <div class="col-md-3 col-xs-3 col-sm-3 col-lg-3">
                            <select id="" class="form-control"></select>
                        </div>
                        <div class="col-md-3 col-xs-3 col-sm-3 col-lg-3">
                            <label for="" class="control-label">Thời gian bắt đầu</label>
                        </div>
                        <div class="col-md-3 col-xs-3 col-sm-3 col-lg-3">
                            <select id="" class="form-control"></select>
                        </div>
                    </div>
                    <div class="row" style="margin-top:10px;">
                        <div class="col-md-3 col-xs-3 col-sm-3 col-lg-3">
                            <label for="" class="control-label">Chuyên môn</label>
                        </div>
                        <div class="col-md-3 col-xs-3 col-sm-3 col-lg-3">
                            <input type="text" class="form-control" placeholder="" id=""
                                   class="form-control"></input>
                        </div>
                        <div class="col-md-3 col-xs-3 col-sm-3 col-lg-3">
                            <label for="" class="control-label">Thời gian kết thúc</label>
                        </div>
                        <div class="col-md-3 col-xs-3 col-sm-3 col-lg-3">
                            <select id="" class="form-control"></select>
                        </div>
                    </div>
                    <div class="row" style="margin-top:10px;">
                        <div class="col-md-3 col-xs-3 col-sm-3 col-lg-3">
                            <label class="control-label">Họ và tên</label>
                        </div>
                        <div class="col-md-6 col-xs-6 col-sm-6 col-lg-6">
                            <input type="text" class="form-control">
                        </div>
                    </div>
                    <div class="row" style="margin-top:10px;">
                        <div class="col-md-3 col-xs-3 col-sm-3 col-lg-3">
                            <label class="control-label">Ngày sinh</label>
                        </div>
                        <div class="col-md-3 col-xs-3 col-sm-3 col-lg-3">
                            <input type="date" class="form-control">
                        </div>
                        <div class="col-md-3 col-xs-3 col-sm-3 col-lg-3">
                            <label for="" class="control-label">Số điện thoại</label>
                        </div>
                        <div class="col-md-3 col-xs-3 col-sm-3 col-lg-3">
                            <input type="tel" class="form-control" placeholder="" id=""
                                   class="form-control"></input>
                        </div>
                    </div>
                    <div class="row" style="margin-top:10px;">
                        <div class="col-md-3 col-xs-3 col-sm-3 col-lg-3">
                            <label for="" class="control-label">Email</label>
                        </div>
                        <div class="col-md-3 col-xs-3 col-sm-3 col-lg-3">
                            <input type="email" class="form-control" placeholder="" id=""
                                   class="form-control"></input>
                        </div>
                        <div class="col-md-3 col-xs-3 col-sm-3 col-lg-3">
                            <label for="" class="control-label">Điểm tích lũy</label>
                        </div>
                        <div class="col-md-3 col-xs-3 col-sm-3 col-lg-3">
                            <input type="number" class="form-control" placeholder="" id=""
                                   class="form-control"></input>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Lưu</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Lưu và thêm</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>